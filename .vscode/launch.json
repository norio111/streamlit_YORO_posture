{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": ["run", "app.py"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "STREAMLIT_SERVER_PORT": "8501",
                "STREAMLIT_SERVER_HEADLESS": "true"
            }
        }
    ]
}